#include <stdio.h>
#include <string.h>

enum Day { MON = 1, TUE, WED, THU, FRI, SAT, SUN };

struct Record {
    int id;
    enum Day day;
    char name[20];
};

int main() {
    struct Record a, b;

    printf("Enter first record (id day name): ");
    scanf("%d %d %s", &a.id, (int*)&a.day, a.name);

    printf("Enter second record (id day name): ");
    scanf("%d %d %s", &b.id, (int*)&b.day, b.name);

    // Compare each field
    if (a.id == b.id &&
        a.day == b.day &&
        strcmp(a.name, b.name) == 0)
    {
        printf("Both structs are IDENTICAL.\n");
    } else {
        printf("Structs are NOT identical.\n");
    }

    return 0;
}
