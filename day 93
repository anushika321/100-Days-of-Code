#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s[5];
    int i, topIndex = 0;

    // Input details for 5 students
    for(i = 0; i < 5; i++) {
        printf("\nEnter details of student %d:\n", i + 1);
        printf("Enter roll number: ");
        scanf("%d", &s[i].roll);

        printf("Enter name: ");
        scanf("%s", s[i].name);

        printf("Enter marks: ");
        scanf("%f", &s[i].marks);
    }

    // Find student with highest marks
    for(i = 1; i < 5; i++) {
        if(s[i].marks > s[topIndex].marks) {
            topIndex = i;
        }
    }

    // Print the topper
    printf("\n\n--- Student with Highest Marks ---\n");
    printf("Roll Number: %d\n", s[topIndex].roll);
    printf("Name: %s\n", s[topIndex].name);
    printf("Marks: %.2f\n", s[topIndex].marks);

    return 0;
}
