#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

// Function returning structure of highest-scoring student
struct Student getTopStudent(struct Student s[], int n) {
    int i, topIndex = 0;

    for (i = 1; i < n; i++) {
        if (s[i].marks > s[topIndex].marks)
            topIndex = i;
    }

    return s[topIndex];   // returning structure
}

int main() {
    struct Student students[3] = {
        {1, "Amit", 75.4},
        {2, "Riya", 89.2},
        {3, "Kabir", 82.0}
    };

    struct Student top = getTopStudent(students, 3);

    printf("\n--- Top Student ---\n");
    printf("Roll : %d\n", top.roll);
    printf("Name : %s\n", top.name);
    printf("Marks: %.2f\n", top.marks);

    return 0;
}
